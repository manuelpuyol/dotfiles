[color]
  ui = auto
[core]
  commitGraph = true
  editor = vim
  excludesfile = ~/.gitignore
  quotepath = on
[credential]
  helper = dotfiles
[diff]
  tool = meld
[difftool]
  prompt = false
[difftool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args \"$LOCAL\" \"$PWD/$REMOTE\"
[fetch]
  prune = true
  writeCommitGraph = true
[gc]
  writeCommitGraph = true
[github]
  user = manuelpuyol
[merge]
  tool = meld
[mergetool]
  prompt = false
[mergetool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args --auto-merge \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" --output=\"$PWD/$MERGED\"
[protocol]
  version = 2
[push]
  default = simple
[tag]
  sort = -version:refname
[user]
  name = Manuel Puyol
