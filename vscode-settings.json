{
  // editor
  "editor.fontFamily": "Hasklig, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.formatOnSave": false,
  "editor.inlineSuggest.enabled": true,
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  // explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // files
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "node_modules": true,
    "vendor/bundle": true
  },
  // search
  "search.exclude": {
    "vendor/": true
  },
  //terminal
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  // workbench
  "workbench.colorTheme": "Ayu Mirage",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorCustomizations": {
    "terminal.background": "#282a36",
    "terminalCursor.background": "#282a36",
    "terminalCursor.foreground": "#97979b",
    "terminal.selectionBackground": "#97979b33",
    "terminal.foreground": "#eff0eb",
    "terminal.ansiBlack": "#282a36",
    "terminal.ansiRed": "#ff5c57",
    "terminal.ansiGreen": "#5af78e",
    "terminal.ansiYellow": "#f3f99d",
    "terminal.ansiBlue": "#57c7ff",
    "terminal.ansiMagenta": "#ff6ac1",
    "terminal.ansiCyan": "#9aedfe",
    "terminal.ansiWhite": "#f1f1f0",
    "terminal.ansiBrightBlack": "#686868",
    "terminal.ansiBrightRed": "#ff5c57",
    "terminal.ansiBrightGreen": "#5af78e",
    "terminal.ansiBrightYellow": "#f3f99d",
    "terminal.ansiBrightBlue": "#57c7ff",
    "terminal.ansiBrightMagenta": "#ff6ac1",
    "terminal.ansiBrightCyan": "#9aedfe",
    "terminal.ansiBrightWhite": "#eff0eb"
  },
  // Extensions
  // Copilot
  "copilot.enabled": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true
  },
  // GitLens
  "gitlens.codeLens.enabled": false,
  // GitHub Issues
  "githubIssues.ignoreCompletionTrigger": [
    "python",
    "makefile",
    "ruby",
    "erb"
  ],
  // Rails
  "rails.editor.formatOnSave": false,
  // Test Explorer
  "testExplorer.addToEditorContextMenu": true,
  "testExplorer.hideEmptyLog": false,
  "rubyTestExplorer.logpanel": true,
  // Workspace Explorer
  "workspaceExplorer.workspaceStorageDirectory": "/Users/manuelpuyol/vscode",
  // Rubocop
  "ruby.rubocop.useBundler": true,
  // Languages
  "[ruby]": {
    "editor.defaultFormatter": "misogi.ruby-rubocop",
    "editor.codeActionsOnSave": {
      "editor.action.formatDocument": true
    }
  },
  "[html.erb]": {
    "editor.defaultFormatter": "manuelpuyol.erb-linter",
    "editor.formatOnSave": false
  },
  "[erb]": {
    "editor.defaultFormatter": "manuelpuyol.erb-linter",
    "editor.formatOnSave": false
  },
  "security.workspace.trust.untrustedFiles": "open"
}
